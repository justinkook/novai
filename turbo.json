{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "check": {
      "dependsOn": ["^check"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "check:fix": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false
    },
    "organize-imports": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
