          {
            "group": "Introduction",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Game Engine",
            "pages": [
              "engine/overview",
              "engine/architecture",
              "engine/agents",
              "engine/game-state",
              "engine/campaigns",
              "engine/llm-integration"
            ]
          },
          {
            "group": "Packages",
            "pages": [
              "packages/engine",
              "packages/prompts",
              "packages/ui"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Development",
            "pages": [
              "guides/setup",
              "guides/campaigns",
              "guides/deployment"
            ]
          },
          {
            "group": "AI Tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/yourusername/novai",
