{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "NovAI Documentation",
  "description": "AI-powered tabletop RPG game engine and documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
